= simple_form_for(@job, html: { class: ""}) do |f|
  = f.collection_select :category_id, Category.all, :id, :name, { prompt: "Choose a category"}, input_html: { class: "form-control" }
  = f.input :title, label: "Job Title", input_html: { class: "form-control" }
  = f.input :location, label: "Location", input_html: { class: "form-control" }
  = f.input :description, label: "Job Description", input_html: { class: "form-control" }
  = f.input :company, label: "Company name", input_html: { class: "form-control" }
  = f.input :url, label: "Job Posting URL", input_html: { class: "form-control" }
  %br/
  = f.button :submit
